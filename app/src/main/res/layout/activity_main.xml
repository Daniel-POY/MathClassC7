<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/choiceSpinner"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_marginBottom="3dp"
        android:entries="@array/choice"
        app:layout_constraintBottom_toBottomOf="@+id/headerOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/headerOne"
        app:layout_constraintTop_toTopOf="@+id/headerOne" />

    <EditText
        android:id="@+id/inDoubleOne"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelOne"
        app:layout_constraintTop_toBottomOf="@+id/headerOne" />

    <EditText
        android:id="@+id/inIntOne"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toEndOf="@+id/labelOne"
        app:layout_constraintTop_toTopOf="@+id/labelThree" />

    <EditText
        android:id="@+id/inDoubleTwo"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelTwo"
        app:layout_constraintEnd_toEndOf="@+id/inDoubleOne"
        app:layout_constraintStart_toStartOf="@+id/inDoubleOne"
        app:layout_constraintTop_toTopOf="@+id/labelTwo" />

    <EditText
        android:id="@+id/inIntTwo"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelTwo2"
        app:layout_constraintEnd_toEndOf="@+id/inIntOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inIntOne"
        app:layout_constraintTop_toTopOf="@+id/labelTwo2" />

    <TextView
        android:id="@+id/headerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="1. Division/Multiplication"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerMain" />

    <TextView
        android:id="@+id/headerMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CALCULATAH"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="2. Addition"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/labelTwo"
        app:layout_constraintTop_toBottomOf="@+id/labelTwo" />

    <TextView
        android:id="@+id/headerTwo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="3. Name"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/labelTwo2"
        app:layout_constraintTop_toBottomOf="@+id/labelTwo2" />

    <TextView
        android:id="@+id/labelOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="First Value:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/headerOne"
        app:layout_constraintTop_toBottomOf="@+id/headerOne" />

    <TextView
        android:id="@+id/labelThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="First Value:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/headerTwo"
        app:layout_constraintTop_toBottomOf="@+id/headerTwo" />

    <TextView
        android:id="@+id/labelTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Second Value:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/headerOne"
        app:layout_constraintTop_toBottomOf="@+id/labelOne" />

    <TextView
        android:id="@+id/labelTwo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Second Value:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/labelThree"
        app:layout_constraintTop_toBottomOf="@+id/labelThree" />

    <EditText
        android:id="@+id/inName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter full name"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/headerTwo2"
        app:layout_constraintTop_toBottomOf="@+id/headerTwo2" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOLVE!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inName" />
</androidx.constraintlayout.widget.ConstraintLayout>